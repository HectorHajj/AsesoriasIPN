<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TutorMain"
    tools:showIn="@layout/app_bar_tutor_main">

    <ImageButton
        android:id="@+id/buttonDetenerse"
        android:layout_width="157dp"
        android:layout_height="168dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/stop"
        android:contentDescription="TODO"
        android:onClick="Desconectar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/stop" />

    <TextView
        android:id="@+id/textViewEstado"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:text="Estas Desconectado "
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonConectarse"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="126dp"
        android:layout_height="59dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="163dp"
        android:background="#000000"
        android:onClick="Conectar"
        android:text="CONECTARSE"
        android:textSize="@dimen/activity_horizontal_margin"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>